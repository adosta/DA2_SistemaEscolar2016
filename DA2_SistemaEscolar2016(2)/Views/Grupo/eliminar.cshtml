@model Grupo
@using DA2_SistemaEscolar2016_2_.Models

@{
    ViewBag.Title = "eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>eliminar</h2>

<p>¿Estas seguro de querer eliminar?</p>
<span>Grupo:</span>@Model.nombreGrupo<br />
<span>Carrera:</span>@Model.carrera

<form method="post" action="eliminar">
    @Html.HiddenFor(a => a.grupoID)
    <button class="btn btn-primary" type="submit">Confirmar</button>
    <p class="error">@ViewBag.MensajeError</p>
</form>