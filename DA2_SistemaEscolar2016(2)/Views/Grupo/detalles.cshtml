@model DA2_SistemaEscolar2016_2_.Models.Grupo
@using DA2_SistemaEscolar2016_2_.Models

@{
    ViewBag.Title = "detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Alumno nuevoAlumno = new Alumno();

    nuevoAlumno.grupoID = Model.grupoID;
}

<h2>detalles</h2>

<h4>Grupo</h4>
<hr />
<dl class="dl-horizontal">
    <dt>
        @Html.DisplayNameFor(model => model.nombreGrupo)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.nombreGrupo)
    </dd>

    <dt>
        @Html.DisplayNameFor(model => model.carrera)
    </dt>

    <dd>
        @Html.DisplayFor(model => model.carrera)
    </dd>

</dl>


@Html.Partial("../Alumno/Partial_Crear", nuevoAlumno)

<table class="table table-striped table-hover">
    <tr>
        <th>Nombre Completo</th>
        <th>Fecha de Nacimiento</th>
        <th>Nombre del Grupo</th>
        <th></th>
    </tr>
    @foreach (var alumno in Model.alumnos)
    {
        <tr>

            <td>@(alumno.nombre + " " + alumno.apellidoP + " " + alumno.apellidoM)</td>
            <td>@alumno.fechNac</td>
            <td>@alumno.grupo.nombreGrupo</td>
            <td>@Html.ActionLink("Eliminar", "eliminar", "Alumno", new { id = alumno.noMatricula }, null)  </td>
            <td>@Html.ActionLink("Editar", "editar", "Alumno", new { id = alumno.noMatricula }, null)  </td>
        </tr>
    }


</table>


<p>
    @Html.ActionLink("Editar", "editar", new { id = Model.grupoID })
    @Html.ActionLink("Back to List", "listar")
</p>