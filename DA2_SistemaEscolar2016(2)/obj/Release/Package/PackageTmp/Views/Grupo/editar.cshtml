@model Grupo
@using DA2_SistemaEscolar2016_2_.Models

@{
    ViewBag.Title = "editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>editar</h2>

<form action="editar" method="post">
    @Html.HiddenFor(a => a.grupoID)
    <div class="row">
        <div class="form-group col-sm-6">
            @Html.LabelFor(a => a.nombreGrupo)
            @Html.EditorFor(a => a.grupoID, new { htmlAttributes = new { required = "", @class = "form-control", placeholder = "Nombre de Grupo" } })
            @Html.ValidationMessageFor(a => a.nombreGrupo, "", new { @class = "error" })
        </div>

        <div class="form-group col-sm-6">
            @Html.LabelFor(a => a.carrera)
            @Html.EditorFor(a => a.carrera, new { htmlAttributes = new { required = "", @class = "form-control", placeholder = "Apellido paterno" } })
            @Html.ValidationMessageFor(a => a.carrera, "", new { @class = "error" })
        </div>
    </div>


    <button class="btn btn-primary" type="submit">Enviar</button>
    <p class="error">@ViewBag.MensajeError</p>
</form>